#include <iostream>
using namespace std;

int main() {
	int t,i,n;
	cin>>t;
	while(t--){
	    cin>>n;
	    int a[n],x=0,y=0;
	    for(i=0;i<n;i++){
	        cin>>a[i];
	    }
	    for(i=0;i<n;i++){
	        (a[i]%2!=0)?x++:y++;
	    }
	    if(x%2!=0&&n>1){
	        cout<<2<<"\n";
	    }
	    else{
	        cout<<1<<"\n";
	    }
	}
	return 0;
}
