#include<bits/stdc++.h>
#include<math.h>
using namespace std;

int main(){
    long long int t,n,x,y,z,i,j;
  cin>>t;
    while(t--){x=y=0;
   cin>>n;
   long long int a[n];
   for(i=0;i<n;i++){
       cin>>a[i];
   }
     for(i=0;i<n;i++){
      if(i%2==0&&a[i]%2!=0){
          x++;
      }
      else if(i%2!=0&&a[i]%2==0){
          y++;
      }
   }
    if(x==y){
        cout<<x<<endl;
    }
    else{
        cout<<"-1\n";
    }
   

}
    return 0;
}
