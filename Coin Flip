#include <iostream>
using namespace std;

int main() {
	long long int t,n,g,i,q;
	cin>>t;
	while(t--){
	    cin>>g;
	    while(g--){
	        cin>>i>>n>>q;
	        if(n%2==0){
	            cout<<n/2<<"\n";
	        }
	        else if(n%2!=0&&i==q){
	            cout<<n/2<<"\n";	        
	        }
	        else if(n%2!=0&&i!=q){
	            cout<<(n+1)/2<<"\n";
	        }
	    }
	}
	return 0;
}
