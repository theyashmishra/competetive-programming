#include <iostream>
using namespace std;

int main() {
long long int t,i,j,n,s,k;
cin>>t;
while(t--){i=j=0;
    cin>>s>>n;
    if(s>=n){
        j+=(s/n);
        s=s%n;
    }
    if(s<n&&s!=0){
        if(s%2==0||s==1){
            j++;
        }
        else{
            j+=2;
        }
    }
    cout<<j<<" \n";
}
	return 0;
}
