#include <bits/stdc++.h>
using namespace std;

int main() {
long long int t,i,j,n,x,y;
cin>>t;
while(t--){
    vector<long long int>v;
    cin>>n;
    while(n--){
    cin>>x;
    v.push_back(x);}
    j=*min_element(v.begin(),v.end());
    y=v.size();
    x=j*(y-1);
    cout<<x<<endl;
}
	return 0;
}
