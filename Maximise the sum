#include <bits/stdc++.h>
using namespace std;

int main() {
	long long int t,n,s,i,j,x;
    cin>>t;
    while (t--){s=0;
        cin>>n;
        int a[n];
        for(i=0;i<n;i++)
        {
            cin>>a[i];
        }
        sort(a,a+n);
    for(i=0;i<n/2;i++)
    {
        s=s+a[n-i-1]-a[i];
        
    }
    cout<<s<<"\n";}
	return 0;
}

