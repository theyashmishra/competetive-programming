#include <iostream>
#include<string>
using namespace std;

int main() {
long long int t,i,j,n,k,l;
	cin>>t;
	while(t--){l=0;j=0;k=0;
	    cin>>n;
	    string s;
	    cin>>s;
	    for(i=0;s[i]!='\0';i++){
	        if(s[i]=='1'){
	            l++;
	        }
	    }
	   j=l*(l+1);
	   j/=2;
	           cout<<j<<"\n";
	       
	}
	return 0;
}
