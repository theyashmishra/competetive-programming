#include<iostream>
#include<math.h>
int main(){
    long long int t,a,b,c,i,d,e,x,y,z;
   std:: cin>>t;
    while(t--){
  std:: cin>>a>>b>>x>>y;
   (a<b)?(c=a):(c=b);
   z=(b+a);
   d=(b+a)*x;
   for(i=1;i<=c;i++){
       z=z-2;
       e=(i*y)+z*x;
       if(e<d){
           d=e;
       }
       
   }
   
   std::cout<<d<<"\n";
    }
    return 0;
}
