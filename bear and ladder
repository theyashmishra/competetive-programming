#include <bits/stdc++.h>
using namespace std;

int main() {
long long int t,a,b,c,d;
cin>>t;
while(t--){
    cin>>a>>b;
    if(a%2==0&&b%2==0&&abs(a-b)==2){
        cout<<"YES\n";
    }
    else if(a%2!=0&&b%2!=0&&abs(a-b)==2){
        cout<<"YES\n";
    }
    else if((a%2!=0&&b%2==0&&abs(a-b)==1&&b>a)||(a%2==0&&b%2!=0&&abs(a-b)==1&&a>b)){
        cout<<"YES\n";
    }
    else{
        cout<<"NO\n";
    }
}
	return 0;
}
